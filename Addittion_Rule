total_people = 200
total_passed = 169
total_women = 100
women_passed = 92


prob_passed = total_passed / total_people
prob_passed#0.845

prob_woman = total_women / total_people
prob_woman # 0.5

prob_passed_or_woman = prob_passed + prob_woman - prob_woman_passed
prob_passed_or_woman #0.89
